{% extends 'base.html.twig' %}

{% block title %} Symphart Articles {% endblock %}

{% block body %}

    {% if articles %}
        <table id="articles"  class="table table-striped">
            <thead>
                <tr>
                    <th>Artivle Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{article.title}}</td>
                        <td>
                            <a href="/article/{{article.id}}" data-id="{{article.id}}"  class="btn btn-dark">Show</a>
                      

                            <a href="/article/edit/{{article.id}}" data-id="{{article.id}}"  class="btn btn-light">Edit</a>
                            <a href="#" class="btn btn-danger delete-article" data-id="{{article.id}}">
                            Delete
                            </a>
                            
                        </td>
                    </tr>
                    
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>There is no articles</h2>
    {% endif %}

{% endblock %} 


{% block javascripts %}
    <script src = "/js/main.js" ></script>
{% endblock %}